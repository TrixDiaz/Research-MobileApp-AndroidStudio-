<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout12"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".QuantitativeResearch">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar12" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="ABOUT"
            android:textSize="40sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="-20dp"
            android:text="RESEARCH"
            android:textSize="40sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/introduction"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="@font/cosmic"
            android:background="@drawable/button_background"
            android:text="About Research"
            android:textSize="15dp"
            />


        <Button
            android:id="@+id/application"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/cosmic"
            android:background="@drawable/button_background"
            android:text="Application of Quantitative Research"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/characteristics"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/cosmic"
            android:background="@drawable/button_background"
            android:text="Characteristics of Quantitative Research"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/strength"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="@font/cosmic"
            android:background="@drawable/button_background"
            android:text="Strengths and Weaknesses of Quantitative Research"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/nature"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:textAllCaps="false"
            android:fontFamily="@font/cosmic"
            android:background="@drawable/button_background"
            android:text="The Nature Variables"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/research"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/cosmic"
            android:background="@drawable/button_background"
            android:text="Quantitative Research Design"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/experimental"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="@font/cosmic"
            android:background="@drawable/button_background"
            android:text="Experimental Research Design  (Mariano, 2019)"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/proper"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textAllCaps="false"
            android:fontFamily="@font/cosmic"
            android:background="@drawable/button_background"
            android:text="Proper Paper Format (Quantitative Research)"
            android:textSize="15dp"
            />

    </LinearLayout>

      


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/border"/>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include layout="@layout/main_navigation_drawer12"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>